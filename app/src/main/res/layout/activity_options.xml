<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ca.marklauman.tools.preferences.IntentPreference
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        app:image="@drawable/ic_core_people"
        app:name="@string/community"
        app:summary="@string/community_info"
        android:background="?attr/selectableItemBackground"
        app:intent="ca.marklauman.dominionpicker.community.ActivityComm" />

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright" />

    <ca.marklauman.tools.preferences.IntentPreference
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:image="@drawable/ic_core_language"
        app:name="@string/filt_lang"
        app:summary="@string/filt_lang_desc"
        android:background="?attr/selectableItemBackground"
        app:intent="ca.marklauman.dominionpicker.settings.CardLanguageSelector" />

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright" />

    <ca.marklauman.tools.preferences.IntentPreference
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:image="@drawable/ic_core_sort"
        app:name="@string/sort_card"
        app:summary="@string/sort_card_desc"
        android:background="?attr/selectableItemBackground"
        app:intent="ca.marklauman.dominionpicker.settings.ActivitySortCard" />

    <ca.marklauman.tools.preferences.IntentPreference
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:image="@drawable/ic_core_edition"
        app:name="@string/edition_choice"
        app:summary="@string/edition_choice_desc"
        android:background="?attr/selectableItemBackground"
        app:intent="ca.marklauman.dominionpicker.settings.ActivityChooseEdition" />

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:drawable/divider_horizontal_bright" />

</LinearLayout>